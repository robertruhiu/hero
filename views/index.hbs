<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Home</title>



    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css"
          href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons"/>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css"/>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.css" rel="stylesheet"
          type='text/css'>
    <link rel="stylesheet" href="assets/css/material-kit.css?v=2.0.2">



</head>

<body>

<nav class="navbar fixed-top navbar-expand-lg   topnav" color-on-scroll=100 id="sectionsNav">
    <div class="container ">
        <div class="navbar-translate">
            <a class="navbar-brand" href="/">AfrikaZiara </a>
        </div>

        <div class="collapse navbar-collapse justify-content-xl-end " id="navbarNavDropdown">

            <ul class="navbar-nav">
                <div class="nav-item">
                    <a class="nav-link" href="/profile">
                        Cart
                        {{session.cart.totalQty}}
                    </a>

                </div>
                <div class="dropdown">
                    <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Account
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                        <a class="dropdown-item" href="/login">login</a>
                        <a class="dropdown-item" href="/signup">sign up</a>
                    </div>
                </div>

            </ul>
        </div>

    </div>
</nav>


<div class="page-header header-filter" data-parallax="true" style=" background-image: url('assets/img/kit/34.jpg'); ">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1 class="title">Your Story Starts With Us.</h1>
            </div>
        </div>
    </div>
</div>
<div class="main main-raised">
    <div class="card-group">
        <div class="card mb-4">
            <!--Card image-->
            <div class="view overlay">
                <a href="/relaxation">
                    <img class="img-fluid"
                         src="https://c.pxhere.com/photos/6c/9e/bali_beach_parasol_sand_sea_water_chair_nature-998940.jpg!d"
                         alt="Card image cap">

                    <div class="mask rgba-white-slight"></div>
                </a>
            </div>
            <!--Card image-->
            <!--Card content-->
            <div class="card-body">
                <!--Title-->
                <h4 class="card-title">Relaxation</h4>
                <a href="/relaxation">
                    <button type="button" class="btn btn-primary btn-md">Read more</button>
                </a>
            </div>
            <!--Card content-->
        </div>
        <div class="card mb-4">
            <!--Card image-->
            <div class="view overlay">
                <a href="/urban">
                    <img class="img-fluid"
                         src="https://www.urbanadventures.com/data/0/custom_10175/c-fakepath-webimage-fd725e94-e353-49ab-b3374c5fc4379612.png"
                         alt="Card image cap">

                    <div class="mask rgba-white-slight"></div>
                </a>
                <div class="card-body">
                    <!--Title-->
                    <h4 class="card-title">Urban adventures</h4>
                    <a href="/urban">
                        <button type="button" class="btn btn-primary btn-md">Read more</button>
                    </a>
                </div>
            </div>

        </div>
        <div class="card mb-4">

            <!--Card image-->
            <div class="view overlay">
                <a href="/adventure">
                    <img class="img-fluid"
                         src="https://buzzbud.in/wp-content/uploads/2017/11/forclaz-hiking-backpack-50-l-light-grey-600x490.jpg"
                         alt="Card image cap">

                    <div class="mask rgba-white-slight"></div>
                </a>
            </div>
            <!--Card image-->

            <!--Card content-->
            <div class="card-body">
                <!--Title-->
                <h4 class="card-title">Adventure junkies</h4>

                <a href="/adventure">
                    <button type="button" class="btn btn-primary btn-md">Read more</button>
                </a>
            </div>
            <!--Card content-->

        </div>
        <div class="card mb-4">

            <!--Card image-->
            <div class="view overlay">
                <a href="/extreeme">
                    <img class="img-fluid"
                         src="http://www.coupondunia.in/blog/wp-content/uploads/2013/12/Bungee_Jumping-1-1050x591.jpeg"
                         alt="Card image cap">

                    <div class="mask rgba-white-slight"></div>
                </a>
            </div>
            <!--Card image-->

            <!--Card content-->
            <div class="card-body">
                <!--Title-->
                <h4 class="card-title">Extreme adventures</h4>

                <a href="/extreeme">
                    <button type="button" class="btn btn-primary btn-md">Read more</button>
                </a>
            </div>
            <!--Card content-->

        </div>
        <div class="card mb-4">
            <!--Card image-->
            <div class="view overlay">
                <a href="/night">
                    <img class="img-fluid" src="http://beautifulindia.info/wp-content/uploads/2016/11/night-life.jpg"
                         alt="Card image cap">
                </a>
                <div class="mask rgba-white-slight"></div>
            </div>
            <!--Card image-->
            <!--Card content-->
            <div class="card-body">
                <!--Title-->
                <h4 class="card-title">Night life</h4>
                <a href="night.html">
                    <a href="/night">
                        <button type="button" class="btn btn-primary btn-md">Read more</button>
                    </a>
                </a>
            </div>
            <!--Card content-->
        </div>
    </div>
    <section class="text-center pb-3 my-5">
        <!--Section heading-->
        <h1 class="h1">Our bestsellers</h1>
        <main>
            <!--Main layout-->
            <div class="container">
                {{# each products}}
                    <!--First row-->
                    <div class="row mt-5 wow">
                        <!--First column-->
                        {{# each this}}
                            <div class="col-lg-4 wow fadeIn" data-wow-delay="0.2s">

                                <!--Card-->
                                <div class="card mb-r">

                                    <!--Card image-->
                                    <img class="img-fluid" src="{{ this.imagePath}}" alt="Card image cap">

                                    <!--Card content-->
                                    <div class="card-body">
                                        <!--Title-->
                                        <h4 class="card-title dark-grey-text"><strong>{{ this.title}}</strong></h4>
                                        <!--Text-->

                                        <p class="card-text">{{ this.description}}</p>
                                        <a class="pull-left">${{ this.price}}</a>
                                        <a href="/add-to-cart/{{this._id}}" class="btn btn-primary btn-md pull-right">Book</a>
                                    </div>

                                </div>
                                <!--/.Card-->

                            </div>
                            <!--/.First column-->
                        {{/each}}
                    </div>
                    <!--/.First row-->
                {{/each}}
            </div>
        </main>
    </section>
    <!--tour operators-->
    <section class="text-center pb-3 my-5">
        <!--Section heading-->
        <h2 class="h2">Tour operators</h2>
        <div class="card-group">

            <div class="card mb-4">
                <!--Card image-->
                <div class="view overlay">
                    <img class="img-fluid"
                         src="http://az.bodyslim.co.ke/wp-content/uploads/2018/02/maldives-country-brand-logo.jpg"
                         alt="Card image cap">
                    <a href="#!">
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>
            </div>
            <div class="card mb-4">
                <!--Card image-->
                <div class="view overlay">
                    <img class="img-fluid" src="http://az.bodyslim.co.ke/wp-content/uploads/2018/02/Logo.png"
                         alt="Card image cap">
                    <a href="#!">
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>
            </div>
            <div class="card mb-4">
                <!--Card image-->
                <div class="view overlay">
                    <img class="img-fluid" src="http://az.bodyslim.co.ke/wp-content/uploads/2018/02/download.jpeg"
                         alt="Card image cap">
                    <a href="#!">
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>
            </div>
            <div class="card mb-4">
                <!--Card image-->
                <div class="view overlay">
                    <img class="img-fluid" src="http://az.bodyslim.co.ke/wp-content/uploads/2018/02/secure-traves.jpg"
                         alt="Card image cap">
                    <a href="#!">
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>
            </div>
            <div class="card mb-4">
                <!--Card image-->
                <div class="view overlay">
                    <img class="img-fluid" src="http://az.bodyslim.co.ke/wp-content/uploads/2018/02/golden-1.jpg"
                         alt="Card image cap">
                    <a href="#!">
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>
            </div>
        </div>
        <!-- End Container Start -->
    </section>

</div>




<script>
    new WOW().init();
</script>
<script>
    function myFunction() {
        var x = document.getElementById("myTopnav");
        if (x.className === "topnav") {
            x.className += " responsive";
        } else {
            x.className = "topnav";
        }
    }
</script>

</body>

</html>
